
# below here was added by .my_machine_aliases

alias cdapp='cd /mnt/user/appdata'
alias cdcode='cd /mnt/user/code'
alias cdfilm='cd /mnt/user/films/share'
alias cdfilms=cdfilm
alias cdmusic='cd /mnt/user/music/MusicBrainz-Picard/Export'
alias cdtv='cd /mnt/user/tvshows/share'
alias cdtvshows=cdtv
alias cdweb='cd /mnt/user/wenshows/share'

alias hardlinkmedia='hardlink --content --keep-oldest --minimum-size 1K --io-size 16M --cache-size 16M --verbose --include ".*\.(avi|flac|gif|jpe?g|m[ok]v|mp[3-4]|png|tiff)$"'
alias hardlinkmediadryrun='hardlink --content --keep-oldest --minimum-size 1K --io-size 16M --cache-size 16M --verbose --dry-run --include ".*\.(avi|flac|gif|jpe?g|m[ok]v|mp[3-4]|png|tiff)$"'

alias locatedl='updatedb -U /mnt/user/downloads -o /mnt/user/downloads/locate_downloads.db; locate -d /mnt/user/downloads/locate_downloads.db'
alias locatefilm='updatedb -U /mnt/user/Films -o /mnt/user/Films/locate_films.db; locate -d /mnt/user/Films/locate_films.db'
alias locatetv='updatedb -U /mnt/user/tvshows -o /mnt/user/tvshows/locate_tv.db; locate -d /mnt/user/tvshows/locate_tv.db'

alias lsm="lsl | egrep '.*\.\(avi|flac|gif|jpe?g|m[ok]v|mp[3-4]|png|tiff\)$'"

alias syslog="tail -20f /var/log/syslog"

